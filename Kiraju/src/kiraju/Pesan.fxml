<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500.0" prefWidth="750.0" style="-fx-font-size: 1.5em;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kiraju.PesanController">
   <center>
      <VBox prefHeight="466.0" prefWidth="640.0" spacing="5.0">
         <children>
            <TextField fx:id="searchTextField" maxWidth="-Infinity" promptText="Cari Menu" />
            <TableView fx:id="menuTable" editable="true" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="codeColumn" maxWidth="-1.0" minWidth="200.0" prefWidth="-1.0" text="Kode" />
                <TableColumn fx:id="namaColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="-1.0" text="Nama" />
                  <TableColumn fx:id="jumlahColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Jumlah" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
         <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </padding>
      </VBox>
   </center>
   <top>
      <Text fx:id="judul" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </BorderPane.margin>
      </Text>
   </top>
   <bottom>
      <ButtonBar BorderPane.alignment="CENTER">
        <buttons>
            <Button cancelButton="true" mnemonicParsing="false" onAction="#pesanBtn" stylesheets="@style/bayarBtn.css" text="Selesai" />
        </buttons>
         <BorderPane.margin>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
</BorderPane>
